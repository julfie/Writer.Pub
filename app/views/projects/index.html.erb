<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col m4 s5">
    <h4>Public Projects</h4>
  </div>
  <div class="search col m8 s7">
    <input type="text" class="queue-search input-field" placeholder="Search" width="300px"/>
  </div>  
</div>

<div class="section">
  <div class="divider"></div>
  
  <div class="section row center-align">
    <div class="row queue-search">
      <% @all_projects.each do |project| %>    
        <div class="col s4">
          <div class="card horizontal search-card" style="height:240px;">
            <div class="card-image">
              <%= image_tag  "bookcover.jpg" %>
              <span class="card-title"><%= link_to project.title, project, class: "white-text" %></span>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title grey-text text-darken-4"><%= link_to project.category, project %><p class="grey-text"> - <%= project.genre %> - </p></span>
                <p class="left-align"><%= project.proj_description %></p>
              </div>
              <div class="card-action">
                <a class="btn-floating waves-effect waves-light red right" ><i class="tiny material-icons">bookmark_border</i></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="section">
  <%= link_to 'Create Something New!', new_project_path, class: "center green accent-1 btn" %>
</div>
<br>
